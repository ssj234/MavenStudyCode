<web-app>
	<display-name>sample maven project:shisj's mvnstudy</display-name>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:/account-persist.xml
			classpath:/account-email.xml
		</param-value>
	</context-param>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.shisj.mvnstudy.account.web.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
</web-app>